{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "outDir": "./build/",
        "removeComments": true,
        "resolveJsonModule": true,
        "rootDir": "./src/",
        "sourceMap": false,
        "target": "ESNext",
        "skipLibCheck": true
    },
    "include": [
        "./src/"
    ]
}
