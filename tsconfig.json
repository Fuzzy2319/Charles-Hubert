{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "./build/",
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "exclude": [
        "./node_modules/"
    ],
    "include": [
        "./*.ts",
        "./commands/*.ts"
    ]
}
